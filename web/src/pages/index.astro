---
import Layout from "../layouts/Layout.astro";

const profile = {
	title: "Hello I'm Haruto Goda",
	subtitle: "I'm a software engineer",
	about:
		"I'm a software engineer based in Tokyo, Japan. <br> I'm interested in applying AI to services.",
	experience: [
		{
			company: "Sakana AI",
			position: "Research Engineer Intern",
			period: "Nov 2025 - Present",
			url: "https://sakana.ai/",
		},
		{
			company: "CyberAgent",
			position: "Backend Engineer Intern",
			period: "May 2025 - Nov 2025",
			url: "https://www.cyberagent.co.jp/",
		},
		{
			company: "Emuni Inc.",
			position: "AI Engineer Intern",
			period: "Oct 2024 - Present",
			url: "https://www.emuniinc.jp/",
		},
		{
			company: "Kyoto Textlab",
			position: "LLM Engineer Intern",
			period: "Dec 2024 - Mar 2025",
			url: "https://kyoto-textlab.com/",
		},
	],
	links: [
		{
			name: "GitHub",
			url: "https://github.com/goda6565",
			icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>`,
		},
		{
			name: "LinkedIn",
			url: "https://www.linkedin.com/in/haruto-goda/",
			icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>`,
		},
	],
};
---

<Layout description="Haruto Goda - Software Engineer based in Tokyo, Japan.">
	<main>
		<section class="hero">
			<h1>{profile.title}</h1>
			<p class="subtitle">{profile.subtitle}</p>
		</section>

		<section class="about">
			<h2>About</h2>
			<p set:html={profile.about} />
		</section>

		<section class="experience">
			<h2>Experience</h2>
			<ul class="experience-list">
				{profile.experience.map((exp) => (
					<li class="experience-item">
						<div class="experience-header">
							<h3>{exp.position}</h3>
							<a href={exp.url} target="_blank" rel="noopener noreferrer" class="company">
								{exp.company}
							</a>
						</div>
						<p class="period">{exp.period}</p>
					</li>
				))}
			</ul>
		</section>

		<section class="links">
			<h2>Links</h2>
			<ul class="links-list">
				{profile.links.map((link) => (
					<li>
						<a href={link.url} target="_blank" rel="noopener noreferrer" class="link-item">
							<span class="link-icon" set:html={link.icon} />
							<span>{link.name}</span>
						</a>
					</li>
				))}
			</ul>
		</section>
	</main>
</Layout>

<style>
	main {
		max-width: 800px;
		margin: 0 auto;
		padding: 2rem 1rem;
	}

	.hero {
		text-align: center;
		padding: 3rem 0;
	}

	h1 {
		font-size: 3rem;
		margin: 0 0 1rem 0;
		font-weight: 700;
	}

	.subtitle {
		font-size: 1.25rem;
		color: #666;
		margin: 0;
	}

	section {
		margin-bottom: 3rem;
	}

	h2 {
		font-size: 2rem;
		margin-bottom: 1rem;
		border-bottom: 2px solid #e0e0e0;
		padding-bottom: 0.5rem;
	}

	p {
		line-height: 1.8;
		color: #333;
	}

	ul {
		list-style: none;
		padding: 0;
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
	}

	.experience-list {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.experience-item {
		padding: 1.5rem;
		background: #f9f9f9;
		border-radius: 0.5rem;
	}

	.experience-header {
		display: flex;
		justify-content: space-between;
		align-items: baseline;
		margin-bottom: 0.5rem;
		flex-wrap: wrap;
		gap: 0.5rem;
	}

	.experience-header h3 {
		margin: 0;
		font-size: 1.25rem;
		font-weight: 600;
	}

	.company {
		color: #666;
		font-weight: 500;
		text-decoration: none;
		transition: color 0.2s;
	}

	.company:hover {
		color: #0066cc;
	}

	.period {
		color: #888;
		font-size: 0.9rem;
		margin: 0.5rem 0 0 0;
	}

	.links-list {
		display: flex;
		gap: 1.5rem;
	}

	.link-item {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: #555;
		text-decoration: none;
		font-size: 0.95rem;
		transition: color 0.2s;
	}

	.link-item:hover {
		color: #111;
	}

	.link-icon {
		display: flex;
		align-items: center;
	}

	@media (max-width: 768px) {
		h1 {
			font-size: 2rem;
		}

		.subtitle {
			font-size: 1rem;
		}
	}
</style>
