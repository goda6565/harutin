---
import DinoGame from "../components/DinoGame";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Not Found">
	<main>
		<h1>404</h1>
		<p>Page not found. But here's a game!</p>
		<DinoGame client:load />
		<a href="/" class="home-link">‚Üê Back to Home</a>
	</main>
</Layout>

<style>
	main {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		min-height: calc(100vh - 60px);
		text-align: center;
		padding: 2rem;
		gap: 1.5rem;
	}

	h1 {
		font-size: 4rem;
		margin: 0;
		color: #111;
	}

	p {
		font-size: 1rem;
		color: #666;
		margin: 0;
	}

	.home-link {
		color: #555;
		text-decoration: none;
		font-size: 0.9rem;
		transition: color 0.2s;
	}

	.home-link:hover {
		color: #111;
	}
</style>
